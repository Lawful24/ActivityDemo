<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecyclerViewText">
        <item name="android:textSize">@dimen/recyclerViewTextSize</item>
        <item name="android:drawablePadding">@dimen/defaultDrawablePadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/defaultMargin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="MovieDetailsTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:text">@string/defaultMessage</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/movieTitleTextSize</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:textSize">@dimen/recyclerViewTextSize</item>
        <item name="android:drawablePadding">@dimen/defaultDrawablePadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="fontFamily">@font/lora</item>
    </style>

</resources>